<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/cardview_shadow_start_color"/>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/logo_hopping"/>
    </item>

    <item
        android:top="25dp">
        <bitmap
            android:gravity="top|left"
            android:src="@drawable/copa"/>
    </item>

    <item>
        <bitmap
            android:gravity="bottom|right"
            android:src="@drawable/ubicacion_hopping"/>
    </item>

</layer-list>